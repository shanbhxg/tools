{
  "name": "tool-management",
  "version": "1.0.1",
  "description": "Tool_Management",
  "main": "index.js",
  "icon": "assets/img/pw.jpg",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dev:watch": "npx electronmon --trace-warnings .",
    "build": "electron-builder -p always",
    "release": "set NODE_TLS_REJECT_UNAUTHORIZED=0 && electron-builder --publish always",
    "postinstall": "electron-builder install-app-deps"
  },
  
  "config": {
    "strict-ssl": false
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^6.1.2",
    "electron-builder": "^24.13.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/shanbhxg/tools"
  },
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.pratt.tool-management",
    "productName": "Tool Management",
    "win": {
      "target": "nsis"
    },
    "directories": {
      "output": "dist"
    }
  },
  "dependencies": {
    "electron-updater": "^6.1.8"
  }
}
